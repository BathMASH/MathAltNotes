 257 | |||||||||| | \subsection{Linear first order ordinary differential equations}
 258 | |||||||||| | 
 259 | |||||||||| | These take the form
 260 | |||||||||| | \begin{equation*}
 261 | |||||||||| | \dfrac{dy}{dx} + p(x)y  =  q(x).
 262 | |||||||||| | \label{lin_ODE}
 263 | |||||||||| | \end{equation*}
 264 | |||||||||| | The LHS is a linear combination of $y$ and its derivative.
 265 | |||||||||| | 
 266 | |||||||||| | 
 267 | |||||||||| | We solve these by using an \textbf{integrating factor}. 
 268 | |||||||||| | 
 269 | |||||||||| | 
 270 | |||||||||| | \begin{lemma}
 271 | |||||||||| | If $r(x) = e^{\int p(x)dx}$ then
 272 | |||||||||| | \[
 273 | |||||||||| | \dfrac{dr}{dx}  =  p(x) r(x).
 274 | |||||||||| | \]
 275 | |||||||||| | \end{lemma}
 276 | |||||||||| | 
 277 | |||||||||| | \begin{Proof}
 278 | |||||||||| | By chain rule
 279 | |||||||||| | \begin{eqnarray*}
 280 | |||||||||| |  \dfrac{dr}{dx}  &=&  e^{\int p(x)dx} \dfrac{d}{dx} \int
 281 | |||||||||| | p(x)dx\\
 282 | |||||||||| | &=& p(x) e^{\int p(x)dx} \\
 283 | |||||||||| | && \text{by Fundamental theorem of calculus}\\
 284 | |||||||||| | &=& p(x) r(x)
 285 | |||||||||| | \end{eqnarray*}
 286 | |||||||||| | \end{Proof}
 287 | |||||||||| | 
 288 | |||||||||| | The function $r(x) =  e^{\int p(x)dx}$ is called the \emph{integrating factor}.
 289 | |||||||||| | 
 290 | |||||||||| | \begin{proposition}
 291 | |||||||||| | The equation
 292 | |||||||||| | \begin{equation}
 293 | |||||||||| |  \dfrac{dy}{dx} + p(x)y = q(x)
 294 | |||||||||| |  \label{eq5.1}
 295 | |||||||||| | \end{equation}
 296 | |||||||||| | has solution
 297 | |||||||||| | \[
 298 | |||||||||| |  y(x) = \dfrac{1}{r(x)} \int r(x)q(x)dx.
 299 | |||||||||| | \]
 300 | |||||||||| | \end{proposition}
 301 | |||||||||| | 
 302 | |||||||||| | \begin{Proof}
 303 | |||||||||| | Consider
 304 | |||||||||| | \begin{eqnarray*}
 305 | |||||||||| |  && \dfrac{d}{dx} (r(x)y(x)) \\
 306 | |||||||||| |  &=& r(x) \dfrac{dy}{dx} + y \dfrac{dr}{dx}\\
 307 | |||||||||| |  &=& r(x) \dfrac{dy}{dx} + y pr\\
 308 | |||||||||| |  &=& r(x) \left(\dfrac{dy}{dx} + y p\right)
 309 | |||||||||| | \end{eqnarray*}
 310 | |||||||||| | 
 311 | |||||||||| | Hence if $y$ satisfies \eqref{eq5.1}, then
 312 | |||||||||| | \begin{eqnarray*}
 313 | |||||||||| |  && \dfrac{d}{dx}(ry) = r \left(\dfrac{dy}{dx}+py\right) = rq\\
 314 | |||||||||| |  &\Rightarrow& y = \dfrac{1}{r} \int rq dx.
 315 | |||||||||| | \end{eqnarray*}
 316 | |||||||||| | \end{Proof}
 317 | |||||||||| | 
 318 | |||||||||| | 
 319 | |||||||||| | \begin{examples}
 320 | |||||||||| | \quad
 321 | |||||||||| | 
 322 | |||||||||| | \begin{enumerate}
 323 | |||||||||| |  \item $\dfrac{dy}{dx} + y  =  x$
 324 | |||||||||| | 
 325 | |||||||||| |  So
 326 | |||||||||| |  \[
 327 | |||||||||| |   \dfrac{dy}{dx} + p(x)y = q(x),
 328 | |||||||||| |  \]
 329 | |||||||||| | where
 330 | |||||||||| | \[
 331 | |||||||||| | p(x) = 1, \quad q(x) = x.
 332 | |||||||||| | \]
 333 | |||||||||| | 
 334 | |||||||||| | Integrating factor:
 335 | |||||||||| | \begin{eqnarray*}
 336 | |||||||||| | r(x) = e^{\int p(x)dx}
 337 | |||||||||| |  =  e^x.
 338 | |||||||||| |  \end{eqnarray*}
 339 | |||||||||| |  
 340 | |||||||||| | Hence
 341 | |||||||||| | \begin{eqnarray*}
 342 | |||||||||| | y(x) &=&  e^{-x} \int e^x x dx\\
 343 | |||||||||| | &=&  e^{-x} [xe^{x} - e^{x} + c]\\
 344 | |||||||||| | &=&  x - 1 + ce^{-x}.
 345 | |||||||||| | \end{eqnarray*}
 346 | |||||||||| | (note: non-trivial constant)
 347 | |||||||||| | 
 348 | |||||||||| | \item $x \dfrac{dy}{dx} + 2 u  =  x^3$
 349 | |||||||||| | 
 350 | |||||||||| | Rearranging,
 351 | |||||||||| | \[
 352 | |||||||||| |  \frac{dy}{dx} + 2 \frac{y}{x}  =  x^2 ,
 353 | |||||||||| | \]
 354 | |||||||||| | so
 355 | |||||||||| | \[
 356 | |||||||||| |  \frac{dy}{dx} + p(x)y  =  q{x}, 
 357 | |||||||||| | \]
 358 | |||||||||| | where $p(x)=\dfrac{2}{x}$, $q(x) = x^2$.
 359 | |||||||||| | 
 360 | |||||||||| | Integrating factor:
 361 | |||||||||| | \begin{eqnarray*}
 362 | |||||||||| |  r(x) &=& e^{\int \frac{2}{x}dx} \\
 363 | |||||||||| |  &=& e^{2\ln(x)}\\
 364 | |||||||||| |  &=& x^2.
 365 | |||||||||| | \end{eqnarray*}
 366 | |||||||||| | 
 367 | |||||||||| | Hence
 368 | |||||||||| | \begin{eqnarray*}
 369 | |||||||||| |  y(x) &=& \dfrac{1}{x^2} \int x^2 x^2 dx \\
 370 | |||||||||| |  &=& \dfrac{1}{x^2} \left[\dfrac{x^5}{5}+c\right]\\
 371 | |||||||||| |  &=& \dfrac{x^3}{5} + \dfrac{c}{x^2}.
 372 | |||||||||| | \end{eqnarray*}
