 166 | ||||||||   | \subsection{Homogeneous equations}
 167 | ||||||||   | 
 168 | ||||||||   | A function $f(x,y)$ is homogeneous of degree $n$ if
 169 | ||||||||[  | \[
 170 | ||||||||[  |  f(tx,ty) = t^{n} f(x,y).
 171 | ||||||||   | \]
 172 | ||||||||   | 
 173 | ||||||||   | \begin{examples}
 174 | ||||||||   |  \quad
 175 | ||||||||   |  \begin{eqnarray*}
 176 | ||||||||   |    f(x,y) &=& x^2 + xy\\
 177 | ||||||||   |   \Rightarrow\quad f(tx, ty) &=& t^2 x^2 + t^2 xy \\
 178 | ||||||||   |   &=& t^2 f(x,y)
 179 | ||||||||   |  \end{eqnarray*}
 180 | ||||||||   | (homogeneous, degree $2$)
 181 | ||||||||   | 
 182 | ||||||||   |  \begin{eqnarray*}
 183 | ||||||||   |    f(x,y) &=& \sqrt{x^2 + y^2}\\
 184 | ||||||||   |   \Rightarrow\quad f(tx, ty) &=& t \sqrt{x^2 + y^2} \\
 185 | ||||||||   |   &=& t f(x,y)
 186 | ||||||||   |  \end{eqnarray*}
 187 | ||||||||   | (homogeneous, degree $1$)
 188 | ||||||||   | 
 189 | ||||||||[  | \[
 190 | ||||||||[  |  f(x,y) = \sin \left(\dfrac{y}{x}\right)
 191 | ||||||||   | \]
 192 | ||||||||   | (homogeneous, degree $0$)
 193 | ||||||||   | \end{examples}
 194 | ||||||||   | 
 195 | ||||||||   | 
 196 | ||||||||   | % There's no higher degree version, but it looks like it is possible to use a similar method using t = 1/x.
 197 | ||||||||   | \subsubsection*{Degree $0$.}
 198 | ||||||||   | 
 199 | ||||||||   | The general form for a homogeneous differential equation of degree $0$ is
 200 | ||||||||[  | \[
 201 | ||||||||[  |  \dfrac{dy}{dx} = f \left(\dfrac{y}{x}\right)
 202 | ||||||||   | \]
 203 | ||||||||   | 
 204 | ||||||||   | \begin{solution}
 205 | ||||||||   |  Let $u=\dfrac{y}{x}$. Then
 206 | ||||||||   |  \begin{eqnarray*}
 207 | ||||||||   |   && ux = y\\
 208 | ||||||||   |   &\Rightarrow& u+x \dfrac{du}{dx} = \dfrac{dy}{dx}.
 209 | ||||||||   |  \end{eqnarray*}
 210 | ||||||||   | 
 211 | ||||||||   |  Hence
 212 | ||||||||   |   \begin{eqnarray*}
 213 | ||||||||   |   && u + x \dfrac{du}{dx} = f(u)\\
 214 | ||||||||   |   &\Rightarrow& x \dfrac{du}{dx} = f(u) - u\\
 215 | |||||||||| |   &\Rightarrow& \int \dfrac{du}{f(u)-u} = \int \dfrac{dx}{x} = \ln \left|x\right|+c.
 216 | |||||||||| |  \end{eqnarray*}
 217 | |||||||||| | \end{solution}
 218 | |||||||||| | 
 219 | |||||||||| | \begin{example}
 220 | |||||||||| |  \[
 221 | |||||||||| |   \dfrac{dy}{dx} = \dfrac{y}{x} \left(1 + \ln \left(\dfrac{y}{x}\right)\right)
 222 | |||||||||| |  \]
 223 | |||||||||| |  
 224 | |||||||||| |  Let $u=\dfrac{y}{x}$. Then
 225 | |||||||||| |  \begin{eqnarray*}
 226 | |||||||||| |   u + x \dfrac{du}{dx} &=& u (1 + \ln(u))\\
 227 | |||||||||| |   &=& u + u \ln (u)\\
 228 | |||||||||| |   \Rightarrow \quad \int \dfrac{du}{u \ln(u)} &=& \int \dfrac{dx}{x} \\
 229 | |||||||||| |   &=& \ln \left|x\right| + c.
 230 | |||||||||| |  \end{eqnarray*}
 231 | |||||||||| | 
 232 | |||||||||| |  Let $v=\ln(u)$. Then
 233 | |||||||||| |  \[
 234 | |||||||||| |   \dfrac{dv}{du} = \dfrac{1}{u} \qquad (u>0)
 235 | |||||||||| |  \]
 236 | |||||||||| | 
 237 | |||||||||| |  So
 238 | |||||||||| |  \[
 239 | |||||||||| |   \int \dfrac{du}{u \ln(u)} = \int \dfrac{dv}{v} = \ln \left|v\right|
 240 | |||||||||| |  \]
 241 | |||||||||| |  
 242 | |||||||||| |  Hence
 243 | |||||||||| |  \[
 244 | |||||||||| |   \ln \left|v\right| = \ln (x)+c
 245 | |||||||||| |  \]
 246 | |||||||||| |  
 247 | |||||||||| |  If $v>0$, \quad $v=Ax$, \quad $A=e^{c}$.
 248 | |||||||||| | 
 249 | |||||||||| | \begin{eqnarray*}
 250 | |||||||||| | & \Rightarrow & \ln (u) = Ax\\
 251 | |||||||||| | & \Rightarrow & \ln \left(\dfrac{y}{x}\right) = Ax\\
 252 | |||||||||| | & \Rightarrow & u=xe^{Ax}.
 253 | |||||||||| | \end{eqnarray*}
 254 | |||||||||| | \end{example}
